@{
    Layout = null;
}
@model RegisterVM
<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Elegencia</title>
    <link rel="icon" href="~/assets/img/favicon.svg" />
    <link rel="stylesheet" href="~/assets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="~/assets/css/style.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <section>
        <div class="bg-img">
            <div class="content">
                <div class="d-flex justify-content-center">
                    <a asp-controller="home" asp-action="index"><img src="~/assets/img/logo.png" alt="..."></a>
                </div>
                <header>Register</header>
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <div class="field space">
                                    <input  asp-for="Name" required placeholder="Name">
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>

                                <div class="field space">
                                    <input asp-for="Surname" required placeholder="Surname">

                                </div>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                                <div class="field space">
                                    <input asp-for="Username" class="rounded-pill" required placeholder="Username">

                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>b
                            </div>
                            <div class="col-6">
                                <div class="field space">
                                    <input asp-for="Email" required placeholder="Email">

                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>

                                <div class="field space">
                                    <input  asp-for="Password" type="password" class="pass-key" required placeholder="Password">

                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="field space">
                                    <input asp-for="ConfirmPassword" type="password" class="pass-key" required placeholder="Confirm Password">

                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field rounded-pill">
                        <input class="rounded-pill" type="submit" value="REGISTER">
                    </div>
                    <div class="pass d-flex justify-content-center">
                        <p class="text-light">Have an account? <a asp-controller="account" asp-action="login">Login Now</a></p>
                    </div>
                </form>
                @*  <div class="login">
                Or login with
                </div> *@
                @*  <div class="links">
                <div class="facebook">
                <i class="fab fa-facebook-f"><span>Facebook</span></i>
                </div>
                <div class="instagram">
                <i class="fab fa-instagram"><span>Instagram</span></i>
                </div>
                </div>
                <div class="signup">
                Don't have account?
                <a href="#">Signup Now</a>
                </div> *@
            </div>
        </div>
    </section>
    <script>
        const pass_field = document.querySelector('.pass-key');
        const showBtn = document.querySelector('.show');
        showBtn.addEventListener('click', function () {
            if (pass_field.type === "password") {
                pass_field.type = "text";
                showBtn.textContent = "HIDE";
                showBtn.style.color = "#3498db";
            } else {
                pass_field.type = "password";
                showBtn.textContent = "SHOW";
                showBtn.style.color = "#222";
            }
        });
    </script>
</body>
</html>
