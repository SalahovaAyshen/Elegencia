                                                </svg>
                                            </div>


                                        </div>

                                        <div class="ak-date">
                                            <input class="date-input" asp-for="Date" min="{{ DateTime.Now.ToString(" yyyy-MM-dd") }}"

                                                   id="date">
                                            <div class="date-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                                     viewBox="0 0 25 25" fill="none">
                                                    <mask id="mask0_1166_8220" style="mask-type:luminance"
                                                          maskUnits="userSpaceOnUse" x="0" y="0" width="25"
                                                          height="25">
                                                        <path d="M0.995117 0.140627H24.9951V24.1406H0.995117V0.140627Z"
                                                              fill="white" />
