                                                </svg>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="ak-height-50 ak-height-lg-40"></div>
                                    <span asp-validation-for="Time" class="text-danger"></span>
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                    <div class="ak-height-50 ak-height-lg-40"></div>
                                  
                                    <div class="ak-form-time-date">
                                        <div class="ak-time">
                                            <input placeholder="Name" asp-for="Name" class="time-input" type="text" name="name">

                                        </div>
                                        <div class="ak-date">
                                            <input placeholder="Email" asp-for="Email" class="date-input" type="email" name="email">
                                        </div>

                                    </div>

                                    <div class="ak-height-50 ak-height-lg-40"></div>
                                    <div class="ak-height-50 ak-height-lg-40"></div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <span asp-validation-for="Email" class="text-danger"></span>


                                    <div>
                                        <button class="ak-btn style-5 color-yellow-bg" type="submit" formmethod="post">
                                            Reservations
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Booking System -->
   

    <script>
        document.getElementById('date').addEventListener('input', function () {
            var selectedDate = new Date(this.value);
            var currentDate = new Date();

            if (selectedDate < currentDate) {
                alert('You cannot choose a past date!');

                var today = new Date();
                var formattedToday = today.toISOString().split('T')[0];

                this.value = formattedToday;

                if (this.min !== formattedToday) {
                    this.min = formattedToday;
                }
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            var today = new Date();
            var formattedToday = today.toISOString().split('T')[0];
            var deadlineInput = document.getElementById('date');

            if (deadlineInput.min !== formattedToday) {
                deadlineInput.min = formattedToday;
            }
        });
    </script>
