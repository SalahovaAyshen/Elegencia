    <div class="tile">
        <h3 class="tile-title">@(Model.ReservationCount > 10 ? "10+" : Model.ReservationCount) @(Model.ReservationCount <= 0 ? "Reservation" : "Reservations")  </h3>
        <div class="table-responsive col-12">
            <table class="table">
                <thead>
                    <tr>
                   
                    </tr>
                </thead>
                <tbody>
                    @foreach (Reservation item in Model.Reservations)
                    {
                        <tr>

                            <td>
                                <ul class="list-group">
                                    <li class="list-group-item">Name: @item.Name</li>
                                    <li class="list-group-item">Email: <a href="mailto:@item.Email">@item.Email</a></li>
                                    <li class="list-group-item">Number of people:@item.NumberOfPeople</li>
                                    <li class="list-group-item">Arrival date time:@item.ArrivalDateTime</li>

                                </ul>
                            </td>
                                <td >
                                <a class="d-flex justify-content-center pt-5" asp-controller="dashboard" asp-action="read" asp-route-id="@item.Id">
                                    <img src="~/manage/images/accept.png" style="width:20px; height:20px"/>
                                </a>
                                <a class="d-flex justify-content-center pt-5" asp-controller="dashboard" asp-action="reject" asp-route-id="@item.Id">
                                    <img src="~/manage/images/reject.png" style="width:20px; height:20px"/>
                                </a>
                            </td>
                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
